#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run lint on frontend
echo "📝 Running lint on frontend..."
cd valid-front && npm run lint-staged
if [ $? -ne 0 ]; then
  echo "❌ Frontend lint failed!"
  exit 1
fi
cd ..

# Run .NET tests
echo "🧪 Running .NET tests..."
dotnet test src/ValidSolution.sln --no-restore --verbosity quiet
if [ $? -ne 0 ]; then
  echo "❌ .NET tests failed!"
  exit 1
fi

echo "✅ All pre-commit checks passed!"
